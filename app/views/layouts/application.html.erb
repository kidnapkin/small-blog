<!DOCTYPE html>
<html>
  <%= render 'layouts/head' %>
  <body>
    <%= render 'layouts/navigation' %>
    <%= render 'layouts/header' %>
      <div class="container">
        <% flash.each do |message_type, message| %>
            <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
        <% end %>
        <%= content_for?(:content) ? yield(:content) : yield %>
      </div>
      <hr>
    <%= render 'layouts/footer' %>
  </body>
</html>
