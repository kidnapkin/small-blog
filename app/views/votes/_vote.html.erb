<% if voted?(comment) %>
    <%= link_to vote_path(comment.votes.find_by(user_id: current_user.id)), method: :delete, remote: true do %>
        <i class="fa fa-heart votes-count active">
          <%= comment.votes.count %>
        </i>
    <% end %>
<% else %>
    <%= link_to votes_path(user_id: current_user.id, comment_id: comment.id), method: :post, remote: true do %>
        <i class="fa fa-heart votes-count">
          <%= comment.votes.count %>
        </i>
    <% end %>
<% end %>