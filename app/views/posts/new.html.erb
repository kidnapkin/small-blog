<% content_for(:page_heading, 'Create new post') %>

<div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
      <%= form_for([current_user, @post], html: { multipart: true }) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
    
        <div class="form-group">
          <%= f.text_field :title, class: 'form-control', placeholder: 'POST TITLE*', required: true %>
        </div>
    
        <div class="form-group">
          <%= f.bootsy_area :content, class: 'form-control', rows: 20, resize: true, placeholder: 'POST CONTENT*', required: true %>
        </div>
    
        <%= f.submit "Publish something special...", class: "btn btn-primary" %>
        
        <div class="picture">
          <%= f.label :featured_image %> 
          <%= f.file_field :featured_image, accept: 'image/jpeg,image/gif,image/png' %>
        </div>
      <% end %>
    </div>
</div>
