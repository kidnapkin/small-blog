<% if @comment.parent %>
  $('#<%= dom_id(@comment.parent) %>')
      .parent()
      .append('<%= j content_tag(:div, render('comment', comment: @comment), class: 'nested_comments') %>');
  $('#<%= dom_id(@comment.parent) %>').find('textarea').val('');
<% else %>
  $('#comments-list')
      .append('<%= j render 'comment', comment: @comment %>');
  $('#comment_content_').val('');
<% end %>

$('#<%= dom_id(@comment) %>').hide().fadeIn(1000);